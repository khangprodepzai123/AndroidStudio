<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Phần nền cong xanh nhạt -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#D8EFD3">

        <ImageView
            android:id="@+id/logoNTU"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ntu"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="591dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Khung ảnh -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/frame_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Ảnh"
                android:textSize="16sp" />
        </FrameLayout>

        <!-- Cột nút -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnChucNang2"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E0F0FF"
                android:text="Chức năng 2"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnChucNang3"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E0F0FF"
                android:text="Chức năng 3"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnChucNang4"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E0F0FF"
                android:text="Chức năng 4"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnAboutMe"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:backgroundTint="#E0F0FF"
                android:text="About Me"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
